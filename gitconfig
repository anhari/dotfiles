[init]
  defaultBranch = main
  templatedir = ~/.git_template
[pull]
  ff = only
[push]
  default = current
[color]
  ui = auto
[alias]
  aa = add --all
  amend = commit --amend
  ap = add --patch
  b = branch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  browse = !hub browse
  cached = diff --cached
  can = commit --amend --no-edit
  ci = commit -v
  co = checkout
  cp = cherry-pick
  compare = !hub compare
  conflicted = !nvim +Conflicted
  count = changed-file-count
  d = diff
  df = diff
  ecm = commit --allow-empty
  fcm = fixup-commit
  flog = log --oneline --
  gogo = rebase --continue
  glog = log -E -i --grep
  ir = interactive-rebase
  issues = !hub browse -- issues
  l = log --pretty=colored
  loslos = rebase --continue
  ns = diff --numstat
  pf = push --force-with-lease
  praise = blame
  pull-request = !hub pull-request
  recent-branches = branch --sort=-committerdate
  remote = remote -v
  sa = apply-stash
  slog = log -S
  sh = shalector
  sla = log --oneline --decorate --graph --all
  ss = diff --shortstat
  st = status
  staged = diff --cached
  uncommit = reset --soft HEAD^
  unpushed-changes = diff @{u}..
  unpushed-commits = log @{u}..
  unrebase = reset --hard ORIG_HEAD
  unstage = reset
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{upstream}
  vamos = rebase --continue
[commit]
  template = ~/.gitmessage
[core]
  autocrlf = input
  editor = nvim
  # editor = "nvim"
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=1,5 -R
[credential]
  helper = osxkeychain
[diff]
  colorMoved = zebra
  tool = default-difftool
[difftool "default-difftool"]
  cmd = nvim
[fetch]
  prune = true
[github]
  user = anhari
[merge]
  ff = only
[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset
[rebase]
  autosquash = true
  autostash = true
[stash]
  showPatch = true
[user]
  user = anhari
  name = Michael Anhari
  email = mpanhari@gmail.com
[gitsh]
  defaultCommand = status --short --branch
  gitcommand = hub
  noGreeting = true
  prompt = "%D %c(%b%#)%w âžœ"
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
