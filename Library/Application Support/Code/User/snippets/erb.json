{
  "Rails view: cache": {
    "prefix": "cache",
    "body": ["<% cache ${0} do %>", "<% end %>"],
    "description": "Rails view: russian doll caching"
  },
  "Rails view: content_for": {
    "prefix": "cfor",
    "body": ["<% content_for :${1} do %>", "\t${0}", "<% end %>"],
    "description": "Rails view: content_for block"
  },
  "Rails view: execute ruby": {
    "prefix": "pp",
    "body": ["<% ${0} %>"],
    "description": "Rails view: execute ruby"
  },
  "Rails view: insert ruby": {
    "prefix": "pe",
    "body": ["<%= ${0} %>"],
    "description": "Rails view: insert ruby"
  },
  "Rails view: insert ruby (shorthand)": {
    "prefix": "=",
    "body": ["<%= ${0} %>"],
    "description": "Rails view: insert ruby"
  },
  "Rails view: else": {
    "prefix": "else",
    "body": ["<% else %>"],
    "description": "Rails view: else"
  },
  "Rails view: end": {
    "prefix": "end",
    "body": ["<% end %>"],
    "description": "Rails view: end"
  },
  "each": {
    "prefix": "Rails view: each block",
    "body": ["<% ${0}.each do || %>", "<% end %>"],
    "description": "Rails view: each block"
  },
  "Rails view: form_with": {
    "prefix": "fw",
    "body": [
      "<%= form_with model: @${1:model} do |f| %>",
      "\t<%= f.label :${2:attribute} %>:",
      "\t<%= f.text_field :${0:$2} %>",
      "\t<br />",
      "",
      "\t<%= f.submit %>",
      "<% end %>"
    ],
    "description": "Rails view: form_with"
  },
  "Rails view: render": {
    "prefix": "rnd",
    "body": ["<%= render '${1}' %>"],
    "description": "Rails view: render"
  },
  "Rails view: link_to": {
    "prefix": "lt",
    "body": ["<%= link_to ${1}, ${0} %>"],
    "description": "Rails view: link_to"
  },
  "Rails view: button_to": {
    "prefix": "bt",
    "body": ["<%= button_to ${1}, ${0} %>"],
    "description": "Rails view: button_to"
  },
  "Rails view: if": {
    "prefix": "if",
    "body": ["<% if ${0} %>", "<% end %>"],
    "description": "Rails view: if"
  },
  "Rails view: if else": {
    "prefix": "ife",
    "body": ["<% if ${0} %>", "<% else %>", "<% end %>"],
    "description": "Rails view: if else"
  },
  "Rails view: method delete": {
    "prefix": "m:d",
    "body": ["method: :delete"],
    "description": "Rails view: method delete"
  },
  "Rails vew: method delete with (confirm)": {
    "prefix": "m:dc",
    "body": ["method: :delete, data: { confirm: \"${1}\"}"],
    "description": "Rails view: method delete (confirm)"
  },
  "Rails view: cons": {
    "prefix": "cons",
    "body": ["<%= console %>"],
    "description": "Rails view: console"
  },
  "Rails view: raise the roof": {
    "prefix": "roof",
    "body": ["<%= raise \"roof\" %>"],
    "description": "Rails view: raise the roof"
  },
  "Rails view: react component": {
    "prefix": "rxc",
    "body": ["<%= react_component '${0}' %>"],
    "description": "Rails view: react component"
  },
  "Rails view: simple_form_for": {
    "prefix": "sff",
    "body": [
      "<%= simple_form_for @${1:model} do |f| %>",
      "\t<%= f.input :${2:field} %>",
      "",
      "\t<%= f.button :submit %>",
      "<% end %>"
    ],
    "description": "Rails view: simple_form_for"
  },
  "Rails view: simple_form radio buttons": {
    "prefix": "sfradio",
    "body": [
      "<%= f.input :${1:field}, as: :radio_buttons, collection: ${2:collection}, label_method: :${3:label_method}, value_method: :${4:value_method} %>"
    ],
    "description": "Rails view: simple_form radio buttons"
  },
  "Rails view: class attribute": {
    "prefix": "..",
    "body": "class=\"${0}\"",
    "description": "Rails view: class attribute"
  },
  "Rails view: i18n translation": {
    "prefix": "t",
    "body": "<%= t('${0}') %>",
    "description": "i18n translation"
  }
}
