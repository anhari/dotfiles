{
  "version": "1.0.0",
  "tasks": [
    {
      "label": "Run Server",
      "dependsOn": [
        "Start Rails Server",
        "Start Sidekiq"
      ]
    },
    {
      "label": "Gitsh",
      "type": "shell",
      "command": "gitsh",
      "group": "none",
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": true,
        "group": "server",
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Sidekiq",
      "type": "shell",
      "command": "bundle exec sidekiq -t 25",
      "group": "build",
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": false,
        "group": "server",
        "reveal": "always"
      }
    },
    {
      "label": "Open Rails console",
      "type": "shell",
      "command": "bin/rails console",
      "presentation": {
        "reveal": "always",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "Start Rails Server",
      "type": "shell",
      "command": "bundle && yarn install && bin/rails s -p 3001",
      "group": "build",
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": false,
        "group": "server",
        "reveal": "always"
      }
    }
  ],
}